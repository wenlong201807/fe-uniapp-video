}
.hiddenAnimation {
    -webkit-animation-fill-mode: forwards;
            animation-fill-mode: forwards;
    -webkit-animation-name: hiddenAnimation;
            animation-name: hiddenAnimation;
}
.showAnimation {
    -webkit-animation-fill-mode: forwards;
            animation-fill-mode: forwards;
    -webkit-animation-name: showAnimation;
            animation-name: showAnimation;
}

