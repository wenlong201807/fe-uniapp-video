.rxlc-step {
  width: 100%;
  padding: 16px 8px 20px 8px;
  box-sizing: border-box;
}
.rxlc-step .rxlc-content {
  width: 100%;
  /* box-shadow: 0px 1px 3px 0px rgba(0, 0, 0, 0.15);
    border-radius: 10px; */
  position: relative;
}
.rxlc-step .rxlc-content .content-list {
  width: 100%;
  display: table;
}
.rxlc-step .rxlc-content .content-list .content-list-lt {
  display: table-cell;
  /* background: #3db8ba; */
  padding-left: 10px;
  position: relative;
  color: #ccc;
  font-family: Noto Sans S Chinese Medium;
  font-size: 16px;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title {
  display: table;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title .lt-icon {
  display: table-cell;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title .lt-icon .lt-icon-box {
  position: relative;
  width: 12px;
  height: 12px;
  border-radius: 6px;
  background: #ccc;
  margin-right: 7px;
  z-index: 23;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title .lt-icon .lt-icon-box-custom {
  background: blue;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title .lt-text {
  display: table-cell;
  width: 100%;
  padding-right: 10px;
  font-weight: 550;
  font-size: 16px;
  line-height: 18px;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title .lt-text .lt-text-title {
  color: #969696;
  font-size: 28rpx;
  margin-bottom: 6rpx;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title .lt-text .lt-text-title-right {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .list-icon-title .lt-text .lt-text-desc {
  margin-bottom: 8px;
}
.rxlc-step .rxlc-content .content-list .content-list-lt .white-line {
  width: 1px;
  height: 100%;
  position: absolute;
  top: 18px;
  /* top: 34px; */
  left: 16px;
  background: #ccc;
  opacity: 0.4;
  z-index: 22;
}
.rxlc-step .rxlc-content .content-list .content-list-rt {
  width: 70%;
  display: table-cell;
}
.rxlc-step .rxlc-content .content-list .content-list-rt .list-rt-content {
  padding: 22px 14px 0px 14px;
  color: #333333;
  font-size: 14.5px;
  line-height: 18px;
}
.rxlc-step .rxlc-content .content-list .content-list-rt .cat-line {
  margin-left: 24px;
  margin-top: 20px;
  border-bottom: 1px solid #efefef;
}
.rxlc-step .rxlc-content .content-list:first-child .content-list-lt {
  border-radius: 10px 0 0 0;
}
.rxlc-step .rxlc-content .content-list:last-child .content-list-lt {
  border-radius: 0 0 0 10px;
}
.rxlc-step .rxlc-content .content-list:last-child .content-list-lt .white-line {
  width: 0px;
}
.rxlc-step .rxlc-content .content-list:last-child .content-list-rt .cat-line {
  margin-left: 10px;
  margin-top: 20px;
  border-bottom: none;
}

